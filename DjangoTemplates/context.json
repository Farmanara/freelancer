        },
        {
            "file":"freelancer_template/sections/about.html",
            "heading":"About",
            "content_paragraphs":[
                {   "class":"col-lg-4 ml-auto",
                    "text":"Freelancer is a free bootstrap theme created by Start Bootstrap. The download includes the complete source files including HTML, CSS, and JavaScript as well as optional SASS stylesheets for easy customization."
                },
                {   "class":"col-lg-4 mr-auto",
                    "text":"You can create your own custom avatar for the masthead, change the icon in the dividers, and add your email address to the contact form to make it fully functional!"
                }
            ],
            "about_section_button":{
                "href":"https://startbootstrap.com/theme/freelancer/",
                "i_class":"fas fa-download mr-2",
                "text":"Free Download!"
            }

        },

        {
            "file":"freelancer_template/sections/contact.html",
            "heading":"Contact Me",
            "form":[
                {
                    "label":"Name",
                    "input": {
                        "id":"name",
                        "type":"text",
                        "placeholder":"Name",
                        "message":"Please enter your name."
                    }
                    


                },
                {
                    "label":"Email Address",
                    "input": {
                        "id":"email",
                        "type":"email",
                        "placeholder":"Email Address",
                        "message":"Please enter your email address."
                    }
                    


                },
                {
                    "label":"Phone Number",
                    "input": {
                        "id":"phone",
                        "type":"tel",
                        "placeholder":"Phone Number",
                        "message":"Please enter your phone number."
                    }
                    


                },
                {
                    "label":"Message",
                    "input": {
                        "id":"message",
                        "rows":"5",
                        "placeholder":"Message",
                        "message":"Please enter a message."
                    }
                    


                }
                
            ],
            "form_button":{
                "class":"btn btn-primary btn-xl",
                "type":"submit",
                "text":"Send"
            }
        }
    ]
    
}